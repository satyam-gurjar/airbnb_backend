<% 
  const isFavourite = typeof userFavourites !== 'undefined' && userFavourites.includes(home._id.toString());
%>
<form action="/favourites" method="POST" class="inline-block">
  <input type="hidden" name="homeId" value="<%= home._id %>">
  <button
    type="submit"
    class="flex items-center justify-center gap-2 px-3 py-2 rounded-full transition-all duration-200 <%= isFavourite ? 'bg-red-500 text-white shadow-md hover:bg-red-600' : 'bg-white text-gray-600 border border-gray-300 hover:bg-red-50 hover:text-red-500 hover:border-red-300' %>"
    title="<%= isFavourite ? 'Remove from favourites' : 'Add to favourites' %>"
  >
    <svg class="w-5 h-5 <%= isFavourite ? 'fill-white' : 'fill-none stroke-current' %>" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
    </svg>
    <span class="text-sm font-medium"><%= isFavourite ? 'Saved' : 'Save' %></span>
  </button>
</form>