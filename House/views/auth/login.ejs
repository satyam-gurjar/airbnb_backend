<%- include('../partials/head') %>

  <body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Header -->
    <%- include('../partials/nav') %>

      <!-- Main -->
      <main class="flex-grow flex items-center justify-center px-4">
        <div class="bg-white p-8 rounded-xl shadow-lg max-w-md w-full">

          <form action="/login" method="POST" class="space-y-6">
          
            <!-- Input -->
            <div>
              <label class="block text-black  font-extrabold text-2xl text-center mb-3" >
                Welcome Back!
              </label>
              <label  class="mx-1.5 mt-5 text-black  font-extrabold  text-xl" for="email">username</label>
              <input type="email" name="email" placeholder="Enter Your Email" value="<%= oldInput.email ? oldInput.email : '' %>" required class="w-full border border-gray-300 rounded-lg px-4 py-2
                   focus:outline-none m-1.5 focus:ring-2 focus:ring-red-400" />
              <label class="mx-1.5 mt-5 text-black  font-extrabold text-xl" for="password">Password</label>
              <input type="password" name="password" placeholder="Enter Password" required class="w-full border border-gray-300 rounded-lg px-4 py-2
                   focus:outline-none m-1.5 focus:ring-2 focus:ring-red-400" />
                <!-- errors -->
             <%- include('../partials/errors') %>
            </div>

            <!-- Submit Button -->
            <input type="submit" value="LogIn" class="w-full bg-red-500 text-white font-semibold py-3 rounded-lg
         hover:bg-red-600 transition shadow-md" />
          </form>
          <p class="text-center mt-5" >don't have an account? <a href="/signup" class="text-red-500 font-extrabold hover:underline">Sign Up</a></p>

        </div>
      </main>

      <!-- Footer -->
      <footer class="text-center text-sm text-gray-500 py-4">
        Â© 2026 Airbnb Clone
      </footer>

  </body>

  </html>